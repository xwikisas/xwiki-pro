    #set ($dependencies = $xwikiProPackageExtension.dependencies)
    #if ($dependencies.size() &gt; 0)
      #foreach($dependency in $dependencies)
        #set ($extension = $extensionManager.resolve($dependency, $extensionNamespace))
        #displayExtension($extension)
      #end
    #else
      $services.localization.render('xwiki.pro.configuration.noResults')
    #end
  #end
#else
  &lt;div class="full column"&gt;
    &lt;p class="loading"&gt;$services.localization.render('xwiki.pro.configuration.loading')&lt;/p&gt;
  &lt;/div&gt;
#end
