  <syntaxId>xwiki/2.1</syntaxId>
  <hidden>true</hidden>
  <content>{{template name="extension.vm" output="false"/}}

{{velocity}}
#if ($xcontext.action == 'get')
  #set ($xwikiProUIId = 'com.xwiki.pro:xwiki-pro-ui')
  #set ($xwikiProUI = $extensionManager.installed.getInstalledExtension($xwikiProUIId, $extensionNamespace))
  #set ($xwikiProPackageId = 'com.xwiki.pro:xwiki-pro-package')
  #set ($xwikiProPackageExtension = $extensionManager.resolve($xwikiProPackageId, $xwikiProUI.version))
  #set ($dependencies = $xwikiProPackageExtension.dependencies)
  #foreach($dependency in $dependencies)
    #set ($extension = $extensionManager.resolve($dependency, $extensionNamespace))
    #displayExtension($extension)
  #end
#end
{{/velocity}}</content>
