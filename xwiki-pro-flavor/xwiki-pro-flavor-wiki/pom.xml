<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.xwiki.pro</groupId>
    <artifactId>xwiki-pro-flavor</artifactId>
    <version>8.4.6-1-SNAPSHOT</version>
  </parent>
  <artifactId>xwiki-pro-flavor-wiki</artifactId>
  <name>XWiki Pro - Flavor - Wiki</name>
  <packaging>xar</packaging>
  <description>The set of wiki pages and applications to be installed on subwikis.</description>
  <properties>
    <xwiki.extension.category>flavor</xwiki.extension.category>
    <!-- Name to display by the Extension Manager -->
    <xwiki.extension.name>XWiki Pro Flavor (Sub Wiki)</xwiki.extension.name>
    <!-- Should be insalled on a wiki but not main wiki -->
    <xwiki.extension.namespaces>[wiki:(?!xwiki$).*]</xwiki.extension.namespaces>
    <xwiki.extension.features>
      <!-- Replace the XWiki Standard flavor -->
      org.xwiki.platform:xwiki-platform-distribution-flavor-wiki
      <!-- Replace the old XE flavor -->
      org.xwiki.enterprise:xwiki-enterprise-ui-wiki
    </xwiki.extension.features>
  </properties>
  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>xwiki-pro-flavor-common</artifactId>
      <version>${project.version}</version>
      <type>xar</type>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-wiki-ui-wiki</artifactId>
      <version>${platform.version}</version>
      <type>xar</type>
      <optional>true</optional>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-tool-xar-plugin</artifactId>
        <version>${commons.version}</version>
        <configuration>
          <!-- Perform some transformations specific to (sub) wikis -->
          <transformations>
            <!-- We override rights below in order to not give explicit view permissions to guest and groups.
                 This is done so that it's possible, directly from the main wiki, with a single click, to prevent
                 view right to Guest and users to the main wiki + all subwikis. Otherwise if the view right was set
                 explicitly, it would require, to navigate to each subwiki's administration and change the permission.
                 This is made possible by the fact that rights are inherited from the main wiki when not set. -->
            <!-- Specify different rights for XWiki.XWikiGuest -->
            <transformation>
              <artifact>org.xwiki.platform:xwiki-platform-distribution-flavor</artifact>
              <file>XWiki/XWikiPreferences.xml</file>
              <xpath>xwikidoc/object[property/users[text()="XWiki.XWikiGuest"]]/property/levels</xpath>
              <value>register</value>
            </transformation>
            <!-- Specify different rights for XWiki.XWikiAllGroup -->
            <transformation>
              <artifact>org.xwiki.platform:xwiki-platform-distribution-flavor</artifact>
              <file>XWiki/XWikiPreferences.xml</file>
              <xpath>xwikidoc/object[property/groups[contains(text(),"XWiki.XWikiAllGroup")]]/property/levels</xpath>
              <value>edit,comment,script,register</value>
            </transformation>
            <!-- Specify different rights for XWiki.XWikiAdminGroup -->
            <transformation>
              <artifact>org.xwiki.platform:xwiki-platform-distribution-flavor</artifact>
              <file>XWiki/XWikiPreferences.xml</file>
              <xpath>xwikidoc/object[property/groups[contains(text(),"XWiki.XWikiAdminGroup")]]/property/levels</xpath>
              <value>admin</value>
            </transformation>
          </transformations>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
